
<%= render 'layouts/admin_header' %>


<div><h1 class="em">従業員一覧</h1></div>

<div>
	<% @employees.each do |employee| %>
        <table class="table table-striped table-hover">
			<thead>
				<tr>
					<th style="width: 550px; padding-left: 60px;font-size: 15px;">名前</th>
					<th style="width: 550px; padding-left: 60px;font-size: 15px;">従業員No.</th>
				</tr>
			</thead>
			<tbody>
				<tr>
                    <td style="width: 550px; padding-left: 60px; font-size: 20px;">
                    	<%= link_to (edit_employee_path(employee.id)), :style => "text-decoration: none;", :class => "link_employee" do %>
		                    <%= employee.name %>
		                <% end %>
					</td>
					<td style="width: 550px; padding-left: 60px;font-size: 20px;">
		                    <%= employee.number %>
					</td>
				</tr>
			</tbody>
        </table>
    <% end %>
</div>