<div class="container" style="margin:90px 0px 0px 480px ">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading" style="text-align: center;background-color: #CBFFD3;"><h3 class="panel-title"><strong>ログイン</strong></h3></div>
                <div class="panel-body">

                        <%= form_for(resource, :html => {:autocomplete => 'off'}, as: resource_name, url: session_path(resource_name)) do |f| %>

                          <div class="form-group">
                            <%= f.label :名前 %><br />
                            <%= f.text_field :name, class: "form-control" %>
                          </div>

                          <div class="form-group">
                            <%= f.label :従業員No  %><br />
                            <%= f.text_field :number, class: "form-control" %>
                          </div>

                          <div class="form-group">
                            <%= f.label :パスワード %><br />
                            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                          </div>

                          <% if devise_mapping.rememberable? -%>
                            <div class="form-group">
                              <%= f.check_box :remember_me  %><br />
                              <%= f.label :パスワード確認 %>
                            </div>
                          <% end -%>

                          <div class="actions">
                            <%= f.submit "Log in", class: "btn btn-sm btn-success" %>
                          </div>
                        <% end %>

                        <%= render "employees/shared/links" %>
            </div>
        </div>
    </div>
</div>