




<div class="time_edit">
	  <div class="time_edit_hedder"><%= @time_table.date_table.employee.name %></div>
	      <div class="time_edit_in">

  	   	    <% if @time_table.errors.any? %>
               <p style="color: red;">入力時間が正しくありません</p>
            <% end %>

	          <%= form_for @time_table do |f| %>


      	        <div class="qqq">
      	      	  <p>時間を入力してください</p>
      	      	    <%= raw sprintf(
                      f.date_field(
                        :date,
                        discard_year: true,
                        use_month_numbers: true,
                        # discard_month: true,
                        start_year:        2018,
                        end_year:          (Time.now.year),
                        default:           Date.new(Date.today.year.to_i,Date.today.month.to_i + 1),
                        date_separator:    '%s'),
                    '月'  ) +'日'%><br/>


      				        <%= f.fields_for :time_tables do |d| %>
      		  			    <% i = 0 %>
      				          <%= f.select :first_time, [["休み", "#{100}"], ["8時", "#{8}"], ["9時", "#{9}"], ["10時", "#{10}"], ["11時", "#{11}"], ["12時", "#{12}"], ["13時", "#{13}"], ["14時", "#{14}"], ["15時", "#{15}"], ["16時", "#{16}"], ["17時", "#{17}"], ["18時", "#{18}"], ["19時", "#{19}"], ["20時", "#{20}"], ["21時", "#{21}"], ["22時", "#{22}"]], {}, {class: 'form'}  %>

      				          <%= f.select :last_time, [["休み", "#{100}"], ["00分", "#{0}"], ["30分", "#{30}"]], {}, {class: 'form'}  %>

      				           ~

      				         <%= f.select :first_timex, [["休み", "#{100}"], ["8時", "#{8}"], ["9時", "#{9}"], ["10時", "#{10}"], ["11時", "#{11}"], ["12時", "#{12}"], ["13時", "#{13}"], ["14時", "#{14}"], ["15時", "#{15}"], ["16時", "#{16}"], ["17時", "#{17}"], ["18時", "#{18}"], ["19時", "#{19}"], ["20時", "#{20}"], ["21時", "#{21}"], ["22時", "#{22}"]], {}, {class: 'form'}  %>

      				         <%= f.select :last_timex, [["休み", "#{100}"], ["00分", "#{0}"], ["30分", "#{30}"]], {}, {class: 'form'} %>

      		         <% end %>
      	        </div>

                <%= f.check_box 'first_time',{}, 100, nil %>休みの場合はチェックを入れてください。
                <div>
                  <%= f.submit "登録", class: "follow_submit" %>
               </div>
         <% end %>
      </div>
</div>


